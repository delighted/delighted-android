<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/very_unhappy"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/ic_smileys_very_unhappy" />

    <ToggleButton
        android:id="@+id/unhappy"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/ic_smileys_unhappy" />

    <ToggleButton
        android:id="@+id/neutral"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/ic_smileys_neutral" />

    <ToggleButton
        android:id="@+id/happy"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/ic_smileys_happy" />

    <ToggleButton
        android:id="@+id/very_happy"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/ic_smileys_very_happy" />
</LinearLayout>