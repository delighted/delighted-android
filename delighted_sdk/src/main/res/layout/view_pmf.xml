<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ToggleButton
        android:id="@+id/not_disappointed"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/ic_pmf_not_disappointed"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/disappointed"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/disappointed"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/ic_pmf_disappointed"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/not_disappointed"
        app:layout_constraintEnd_toStartOf="@id/very_disappointed"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/very_disappointed"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/ic_pmf_very_disappointed"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/disappointed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>