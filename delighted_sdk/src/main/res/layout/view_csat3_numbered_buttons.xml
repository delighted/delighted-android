<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ToggleButton
        android:id="@+id/dissatisfied"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_smileys_unhappy"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/neither"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/neither"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_smileys_neutral"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/satisfied"
        app:layout_constraintStart_toEndOf="@id/dissatisfied"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/satisfied"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_smileys_happy"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/neither"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>